#!/usr/bin/groovy

// Copyright (C) Luxoft Sweden AB 2018

void buildPelux(String variant, String imageName) {
    //String peluxLayer = "meta-pelux"
    //String yoctoDir = "/vagrant/pelux_yocto"
    node("Yocto") {
        dir("meta-pelux") {
            checkout scm
        }

        // Initialize pelux-manifests to get the code
        sh "rm -rf pelux-manifests/"
        sh "git clone https://github.com/fhajredini/pelux-manifests.git --branch meta-pelux-test"

        dir('pelux-manifests') {
            def code = load 'ci-scripts/yocto.groovy'
            //String peluxPath = "/vagrant/sucky-suck"
            code.buildWithLayer(variant, imageName, "testA", "testB")
        }

    }
}

def variantMap = [:]
def variantList = env.VARIANT_LIST.split()

variantList.each {
    def list = it.split(":")
    variantMap["${list[0]}"] = {
        buildPelux(list[0], list[1])
    }
}

parallel (variantMap)
